% page layout

\textheight=21 true cm
\textwidth=14.6 true cm
%\textwidth=15.4 true cm
\hoffset= -1.0 true cm
\voffset= -1.0 true cm

%\abovedisplayskip=15pt plus 3pt minus 3pt
%\belowdisplayskip=15pt plus 3pt minus 3pt
\parindent=2em

\renewcommand{\baselinestretch}{1.05}


% modify figure and table captions

\renewcommand{\fnum@figure}{{\footnotesize\bf \figurename~\thefigure}}
\renewcommand{\fnum@table}{{\footnotesize\bf\tablename~\thetable}}



% modification of section, subsection etc.

\renewcommand{\section}{\setcounter{equation}{0}
                                  \@startsection {section}{1}{\z@}%
                                   {-3.5ex \@plus -1ex \@minus -.2ex}%
                                   {2.3ex \@plus.2ex}%
                                   {\reset@font\large\bfseries}}
\renewcommand{\subsection}{\@startsection{subsection}{2}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\reset@font\normalsize\bfseries}}
\renewcommand{\subsubsection}{\@startsection{subsubsection}{3}{\z@}%
                                     {-3.25ex\@plus -1ex \@minus -.2ex}%
                                     {1.5ex \@plus .2ex}%
                                     {\reset@font\normalsize\itshape}}
